<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="store.eazychina.wtx.mapper.UserMapper">
	<select id="loadByUsername"  parameterType="java.lang.String"  resultType="store.eazychina.wtx.pojo.User">
			select * from EazyChina_User where username = #{username}
	</select>
	
	<select id="loadByEmail"  parameterType="java.lang.String"  resultType="store.eazychina.wtx.pojo.User">
			select * from EazyChina_User where email = #{email}
	</select>
	
	<select id="list"    resultType="store.eazychina.wtx.pojo.User">
			select * from EazyChina_User  
	</select>
	
	<update id="updateByEmail" parameterType="store.eazychina.wtx.pojo.User" >
	
	UPDATE EazyChina_User SET password =#{password} WHERE email =#{email} 
	
	</update>
	
	<select id="add"    parameterType="store.eazychina.wtx.pojo.User">
		insert into EazyChina_User(username ,password,email,nickname) values
		(#{username},#{password},#{email},#{nickname})
	</select>
	
	
</mapper>